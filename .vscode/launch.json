{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder:scraper}/ig_feed_scraper/.env",
            "cwd": "${workspaceFolder:scraper}/ig_feed_scraper",
            "python": "${workspaceFolder:scraper}/ig_feed_scraper/.venv/Scripts/python.exe",
            "justMyCode": false
        }
    ]
}
